@model Blog_Recetas.Models.Categoria


@{
    ViewData["Title"] = "Details";
    ViewData["TituloHeader"] = " Sección De Categoria";
    ViewData["SubtituloHeader"] = "Toda Nuestras Categorias.";

    ViewData["ImagenHeader"] = "/assets/img/categoria-bg.jpg";
}

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">

            <h1>Detalles</h1>

            <div>
                <h4>Categoria</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.Id">Editar</a>
                <a asp-action="Index" class="btn  btn-secondary ">Volver</a>
            </div>
        </div>
    </div>
</div>