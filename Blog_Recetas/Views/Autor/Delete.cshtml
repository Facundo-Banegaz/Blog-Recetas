@model Blog_Recetas.Models.Autor


@{
    ViewData["Title"] = "Delete";
    ViewData["TituloHeader"] = "Todas Nuestros Autores";
    ViewData["SubtituloHeader"] = "Que Realizan las mejores recetas todos los dias.";
    ViewData["ImagenHeader"] = "/assets/img/autor-bg.jpeg";
}
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">

            <h1>Eliminar</h1>

            <h3>¿Estás seguro de que quieres eliminar esto?</h3>
            <div>
                <h4>Autor</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.SegundoNombre)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.SegundoNombre)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Apellido)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Apellido)
                    </dd>
                    <dt class="col-sm-12">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="col-sm-12">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                    <dd class="col-sm-12">
                        @if (!string.IsNullOrEmpty(Model.FotoUrl))
                        {
                            <img src="@Url.Content("~/")@Model.FotoUrl" alt="Imagen del País" class="img-fluid" width="200" />
                        }
                        else
                        {
                            <span>No hay imagen disponible</span>
                        }
                    </dd>
                    <dt class="col-sm-12">
                        @Html.DisplayNameFor(model => model.Biografia)
                    </dt>
                    <dd class="col-sm-12">
                        @Html.DisplayFor(model => model.Biografia)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />      
                    <a class="btn btn-secondary" asp-action="Index">Volver</a>
                </form>
            </div>

        </div>
    </div>
</div>