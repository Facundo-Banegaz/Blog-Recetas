@model Blog_Recetas.Models.Publicacion


@{
    ViewData["Title"] = "Delete";
    ViewData["TituloHeader"] = "Todas Nuestras Recetas";
    ViewData["SubtituloHeader"] = "Desde platos principales hasta postres deliciosos, explora nuestra colección.";
    ViewData["ImagenHeader"] = "/assets/img/publicacion-bg.jpeg";
}
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">
            <h1>Eliminar</h1>

            <h3>¿Estás seguro de que quieres eliminar esto?</h3>
            <div>
                <h4>Publicacion</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Titulo)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Titulo)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Subtitulo)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Subtitulo)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Autor)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Autor.Apellido)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PieDePagina)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PieDePagina)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FechaPublicacion)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaPublicacion)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ImagenUrlPortada)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImagenUrlPortada)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ImagenUrl)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImagenUrl)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TiempoPreparacion)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TiempoPreparacion)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TiempoCoccion)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TiempoCoccion)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Porciones)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Porciones)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Categoria)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Categoria.Nombre)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Calorias)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Calorias)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-secondary" asp-action="Index">Volver</a>
                </form>
            </div>

        </div>
    </div>
</div>